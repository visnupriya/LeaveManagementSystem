<div id="user_nav" style="float:right;position:absolute;right:10px;top:10px;">

  <% if user_signed_in? %>
    Signed in as <%= current_user.email %>. Not you?
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
  
</div>
<div id="empform">
<fieldset>
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @emp.name %>
</p>

<p>
  <b>Emailid:</b>
  <%= @emp.emailid %>
</p>

<p>
  <b>Dateofjoining:</b>
  <%= @emp.dateofjoining %>
</p>

<p>
  <b>Position:</b>
  <%= @emp.position %>
</p>

<%= link_to 'Back', depts_path %>

</fieldset>
</div>
