


<div id="registration">
<fieldset>
<h2 style="text-align:center;">Register your company!!!</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) ) do |f| %>
  <%= devise_error_messages! %>
   
  <div><%= f.label :companyname %><br />
  <%= f.text_field :companyname, :class=>"required" %></div>
  
  <div><%= f.label :hrname %><br />
  <%= f.text_field :hrname, :class=>"required" %></div>
 
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div><br/>

  <div><%= f.submit "Register"  ,:id=>'registerNew' %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</fieldset>
</div>

